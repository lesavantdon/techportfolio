{
  "compilerOptions": {
    "target": "ES6", // Updated target to ES6 for better compatibility
    "lib": ["dom", "esnext"],
    "jsx": "preserve", // Change preserve to react-jsx
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "pages/about.tsx",
    "pages/about.tsx"
  ],
  "exclude": ["node_modules"]
}
